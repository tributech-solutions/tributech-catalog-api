{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tributech/catalog-api": ["libs/connectors/catalog-api/src/index.ts"],
      "@tributech/core": ["libs/core/src/public-api.ts"],
      "@tributech/digital-twin": ["libs/digital-twin/src/index.ts"],
      "@tributech/self-description": [
        "libs/self-description/src/index.ts",
        "libs/self-description/src/index.spec.ts"
      ],
      "@tributech/twin-api": ["libs/connectors/twin-api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
